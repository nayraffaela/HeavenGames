@model HavenGames.Business.Models.Personagem
@{
    ViewData["Title"] = "Editar Personagem";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="UpdatePersonagem" asp-route-jogoId="@ViewData["JogoId"]" method="post">
    <div class="form-group">
        <label asp-for="Nome"></label>
        <input asp-for="Nome" class="form-control" />
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Descricao"></label>
        <textarea asp-for="Descricao" class="form-control"></textarea>
        <span asp-validation-for="Descricao" class="text-danger"></span>
    </div>
    <!-- Adicione outros campos conforme necessário -->

    <input type="hidden" asp-for="Id" />
    <input type="hidden" name="jogoId" value="@ViewData["JogoId"]" />

    <button type="submit" class="btn btn-primary">Salvar</button>
    <a asp-action="Personagens" asp-route-id="@ViewData["JogoId"]" class="btn btn-secondary">Cancelar</a>
</form>
