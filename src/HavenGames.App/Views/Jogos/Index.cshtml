@model IEnumerable<HavenGames.Business.Models.Jogo>

@{
    ViewData["Title"] = "Catálogo de Jogos";
}

<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/GamesList.css" asp-append-version="true" />


    <h1>Catálogo de Jogos</h1>

    <p>

        <a supress-by-claim-name="Jogos" supress-by-claim-value="C" asp-action="Create" class="btn-glass btn-cad">CADASTRAR JOGO</a><br />

        <div class="container mt-5">
            <div class="row">
                @foreach (var item in Model)
                {
                    <div class="col-xl-3 col-lg-3 col-md-4 col-sm-6 col-12 mb-4">
                        <div class="game-container">
                            <img src="@Html.DisplayFor(modelItem => item.Imagem)" class="img-index" alt="Card Image">
                                <div class="details">
                                <h5 class="card-title"><strong>@Html.DisplayFor(modelItem => item.Nome)</strong></h5>
                                    <p class="card-text">Plataforma: @Html.DisplayFor(modelItem => item.Plataforma)</p>
                                    <p class="card-text">Gênero: @Html.DisplayFor(modelItem => item.Genero)</p>

                                <a supress-by-claim-name="Jogos" supress-by-claim-value="U" asp-action="Edit" asp-route-id="@item.Id" class="btn-glass btn">Editar</a>
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn-glass">Detalhes</a>
                                <a supress-by-claim-name="Jogos" supress-by-claim-value="D" asp-action="Delete" asp-route-id="@item.Id" class="btn-glass btn">Excluir</a>
                                <a asp-action="Personagens" asp-route-id="@item.Id" class="btn-glass">Personagens</a>
                                </div>
                            </div>
                    </div>
                }
            </div>
</head>
</html>


